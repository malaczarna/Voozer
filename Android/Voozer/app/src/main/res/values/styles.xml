<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">#ffff</item>
        <item name="colorControlNormal">#ffff</item>
        <item name="colorControlActivated">#ffff</item>
        <item name="colorControlHighlight">#ffff</item>
    </style>

    <style name="AppThemeDriver" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryDriver</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDriver</item>
        <item name="colorAccent">@color/colorAccentDriver</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">#ffff</item>
        <item name="colorControlNormal">#ffff</item>
        <item name="colorControlActivated">#ffff</item>
        <item name="colorControlHighlight">#ffff</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
